{
  "name": "billino-desktop",
  "version": "2.0.0",
  "description": "Billino – Offline-Rechnungssoftware für Kleinunternehmer",
  "author": "wontknow",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "dist": "tsc && electron-builder",
    "dist:win": "tsc && electron-builder --win",
    "dist:mac": "tsc && electron-builder --mac",
    "dist:linux": "tsc && electron-builder --linux"
  },
  "dependencies": {
    "app-builder-bin": "file:app-builder-bin-4.2.0.tgz",
    "electron-log": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.wontknow.billino",
    "productName": "Billino",
    "copyright": "Copyright © 2025-2026 wontknow",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../frontend/out",
        "to": "frontend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/build/billino-backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icons/icon.ico",
      "uninstallerIcon": "icons/icon.ico",
      "installerHeaderIcon": "icons/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icons/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icons/icon.png",
      "category": "Office"
    }
  }
}
